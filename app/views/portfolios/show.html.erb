<p id="notice"><%= notice %></p>

<%= image_tag @portfolio_item.thumb_image unless @portfolio_item.thumb_image.nil? %>

<p>
  <strong>Title:</strong>
  <%= @portfolio_item.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <em><%= @portfolio_item.subtitle %></em>
</p>

<p>
  <strong>Body:</strong>
  <%= @portfolio_item.body %>
</p>

<p>
  <strong>Technologies used:</strong>
  <ul>
    <% @portfolio_item.technologies.each do |technology| %>
      <li>
        <%= technology.name %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) %> |
<%= link_to 'Back', portfolios_path %>
