<%= form_with(model: portfolio, local: true) do |form| %>
  <div class='row'>
    <% if @portfolio_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@portfolio_item.errors.count, "error") %> prohibited this Portfolio Item from being saved:</h2>

        <ul>
          <% @portfolio_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: 'form-control' %>
      </div>
    </div>

    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
    
    <hr>
    <div class='col-md-12'>        
      <h2>Technologies used:</h2>

      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>