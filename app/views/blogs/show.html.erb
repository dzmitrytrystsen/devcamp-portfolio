<div class="col-md-8 blog-main">
  <h2 class="blog-post-title"><%= @blog.title.camelize %></h2>
  <p class="blog-post-meta"><%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</p>
  <p><%= @blog.body %></p>
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to 'Edit', edit_blog_path(@blog) %> /
      <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
  <%= link_to 'Back', blogs_path, class: 'btn btn-primary' %>
</div>
